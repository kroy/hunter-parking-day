---
import { EmailSubscribeForm } from "../components/EmailSubscribeForm";
import "../styles/globals.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <meta property="og:title" content="Hunter Park(ing) Day" />
    <meta
      property="og:description"
      content="Imagine a pedestrianized 68th st"
    />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="og_image.svg" />
    <meta property="og:image:alt" content="no parking sign" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="https://use.typekit.net/zok3iub.css" />
    <title>{title}</title>
  </head>
  <body class="p-4 bg-background flex flex-col gap-4">
    <header
      class="flex flex-col md:flex-row justify-stretch items-center gap-2 lg:items-end pb-8"
    >
      <a href="/">
        <div class="flex flex-col gap-2">
          <div class="text-4xl font-thin">Placemakers of Hunter College</div>
          {
            title !== "Park(ing) Day" ? (
              <div class="text-6xl font-[puffin-arcade-liquid] underline decoration-wavy decoration-accent decoration-[1.5px]">
                Pedestrianize 68th
              </div>
            ) : (
              <div class="text-6xl font-[puffin-arcade-liquid] underline decoration-wavy decoration-accent decoration-[1.5px]">
                Park(ing) Day
              </div>
            )
          }
        </div>
      </a>
      {
        title !== "Park(ing) Day" && (
          <a href="/events/parking-day" class="w-full md:max-w-fit">
            <div class="align-middle text-center font-bold w-full border-accent border-4 neon p-4 rounded-lg bg-dark-purp">
              Park(ing) Day is coming up on 9/20!
            </div>
          </a>
        )
      }
    </header>
    <slot />
    <footer class="hidden border-t-2 p-4 border-light border-dashed">
      <EmailSubscribeForm client:load />
    </footer>
  </body>
</html>
