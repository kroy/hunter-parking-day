---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <meta property="og:title" content="Hunter Park(ing) Day" />
    <meta
      property="og:description"
      content="Imagine a pedestrianized 68th st"
    />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/og_image.svg" />
    <meta property="og:image:alt" content="no parking sign" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="https://use.typekit.net/zok3iub.css" />
    <title>{title}</title>
  </head>
  <body class="p-4 bg-background">
    <header
      class="flex flex-col md:flex-row justify-stretch items-center gap-2 lg:items-end pb-8"
    >
      <a href="/">
        <div class="flex flex-col gap-2">
          <div class="text-4xl font-extralight">Hunter College Placemakers</div>
          {
            title !== "Park(ing) Day" ? (
              <div class="text-6xl font-[puffin-arcade-liquid] underline decoration-wavy decoration-accent decoration-[1.5px]">
                Pedestrianize 68th
              </div>
            ) : (
              <div class="text-6xl font-[puffin-arcade-liquid] underline decoration-wavy decoration-accent decoration-[1.5px]">
                Park(ing) Day
              </div>
            )
          }
        </div>
      </a>
      {
        title !== "Park(ing) Day" && (
          <a href="/events/parking-day" class="w-full md:max-w-fit">
            <div class="align-middle text-center font-bold w-full border-accent border-4 neon p-4 rounded-lg bg-dark-purp">
              Park(ing) Day is coming up on 9/20!
            </div>
          </a>
        )
      }
    </header>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --background: hsl(271.05, 69.76%, 59.8%);
    --light: hsl(271.2, 69.44%, 71.76%);
    --text-dark: hsl(271.2, 69.44%, 14.12%);
    --text-light: hsl(90, 69.23%, 94.9%);
    --accent: hsl(91.05, 69.76%, 59.8%);
    --accent-light: hsl(307.97, 69.76%, 59.8%);
  }
  html {
    font-family: newnord, sans-serif;
    color: var(--text-light);
  }

  .neon {
    box-shadow:
      0 0 20px var(--accent),
      inset 0 0 20px var(--accent-light),
      5px 5px 20px var(--accent);
    color: var(--accent);
  }

  .neo-brutal {
    border: 4px solid var(--text-dark);
    box-shadow:
      0 0 3px var(--accent-light),
      5px 5px var(--text-dark);
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
